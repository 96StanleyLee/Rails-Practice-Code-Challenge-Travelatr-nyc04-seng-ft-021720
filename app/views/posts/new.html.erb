 <% if @post.errors.any? %>
    <% @post.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
<br>
<br>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<%= f.label :content%>
<%= f.text_area :content%>
<br>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>
<br>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name%>


<br>
<%= f.submit "Submit"%>
<%end %>